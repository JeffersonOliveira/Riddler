<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.enable.SlashesInActionNames" value="true" />

	<package name="users" extends="basicstruts2">

		<!-- Funcionario -->

		<action name="listarFuncionarios" class="br.com.ideais.estagio.action.FuncionarioAction"
			method="list">
			<result name="success">/funcionarios.jsp</result>
		</action>

		<action name="cadastrarFuncionario" class="br.com.ideais.estagio.action.FuncionarioAction"
			method="save">
			<result name="success" type="redirect">listarFuncionarios</result>
			<result name="error">/cadastroFuncionario.jsp</result>
		</action>

		<action name="deletarFuncionario" class="br.com.ideais.estagio.action.FuncionarioAction"
			method="delete">
			<result name="success" type="redirect">listarFuncionarios</result>
		</action>

		<action name="editarFuncionario" class="br.com.ideais.estagio.action.FuncionarioAction"
			method="update">
			<result name="success">editarFuncionario.jsp</result>
		</action>

		<!-- Beneficio -->

		<action name="listarBeneficios" class="br.com.ideais.estagio.action.BeneficioAction" method="list">
			<result name="success">/beneficios.jsp</result>
		</action>

		<action name="cadastrarBeneficios" class="br.com.ideais.estagio.action.BeneficioAction"
			method="save">
			<result name="success">listarBeneficios</result>
		</action>

		<action name="deletarBeneficios" class="br.com.ideais.estagio.action.BeneficioAction" method="delete">
			<result name="success" type="redirect">listarBeneficios</result>
		</action>

		<action name="editarBeneficio" class="br.com.ideais.estagio.action.BeneficioAction" method="update">
			<result name="success">/editarBeneficio.jsp</result>
		</action>

		<!-- Usuario -->

		<action name="login" class="br.com.ideais.estagio.action.LoginAction">
			<result name="success" type="redirect">paginaInicial.jsp</result>
		</action>


		<!-- Etapas -->

		<action name="listarEtapas" class="br.com.ideais.estagio.action.EtapasAction" method="list">
			<result name="success">/listarBeneficios</result>
		</action>

		<action name="cadastrarEtapas" class="br.com.ideais.estagio.action.EtapasAction" method="save">
			<result name="success" type="redirect">/listarBeneficios</result>
		</action>

		<action name="deletarEtapas" class="br.com.ideais.estagio.action.EtapasAction" method="delete">
			<result name="success" type="redirect">listarEtapas</result>
		</action>

		<action name="editarEtapas" class="br.com.ideais.estagio.action.EtapasAction" method="update">
			<result name="success">/listarBeneficios</result>
		</action>

		<!-- Feitos -->

		<action name="listarFeitos" class="br.com.ideais.estagio.action.FeitosAction" method="list">
			<result name="success">/listarBeneficio</result>
		</action>

		<action name="cadastrarFeitos" class="br.com.ideais.estagio.action.FeitosAction" method="save">
			<result name="success">/listarBeneficio</result>
		</action>

		<action name="deletarFeitos" class="br.com.ideais.estagio.action.FeitosAction" method="delete">
			<result name="success">/listarBeneficio</result>
		</action>

		<action name="editarFeitos" class="br.com.ideais.estagio.action.FeitosAction" method="update">
			<result name="success">/listarBeneficio</result>
		</action>

	</package>



</struts>